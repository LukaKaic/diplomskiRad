    <script>
        $(document).ready(() => {

            $('#login').show()
            $('#registration').hide()
        })

        function registration() {

            $('#registration').show()
            $('#login').hide()

        }

        function login() {

            $('#registration').hide()
            $('#login').show()

        }
    </script>


